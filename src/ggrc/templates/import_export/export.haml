-extends "layouts/dashboard.haml"

-block extra_javascript
  GGRC.permissions = ={ permissions_json()|tojson|wrap_in_json_parse|safe };
  GGRC.current_user = ={ current_user_json()|tojson|wrap_in_json_parse|safe };
  GGRC.config = ={ config_json()|tojson|wrap_in_json_parse|safe };
  GGRC.custom_attr_defs =  ={ attributes_json()|tojson|wrap_in_json_parse|safe }
  GGRC.access_control_roles =  ={ access_control_roles_json()|tojson|wrap_in_json_parse|safe }
  GGRC.model_attr_defs =  ={ all_attributes_json(True)|tojson|wrap_in_json_parse|safe }
  GGRC.Bootstrap.exportable = ={ export_definitions()|tojson|wrap_in_json_parse|safe };
