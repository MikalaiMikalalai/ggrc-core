-block page_scripts
  %script{ type:'text/javascript', src:'{{config.get("COMMON_JS_PATH")}}' }
  %script{ type:'text/javascript', src:'{{config.get("EXPORT_JS_PATH")}}' }

-block title
  Export

#page-header
  -block header

-block main
  #csv_export
